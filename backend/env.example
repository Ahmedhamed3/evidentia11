# Evidentia Backend Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Fabric Network Configuration
FABRIC_CHANNEL_NAME=evidence-channel
FABRIC_CHAINCODE_NAME=evidence-coc

# Organization Configuration (set based on which org this gateway serves)
# Options: LawEnforcement, ForensicLab, Judiciary
FABRIC_ORG=LawEnforcement
FABRIC_MSP_ID=LawEnforcementMSP

# Fabric Connection Paths (relative to project root)
FABRIC_CRYPTO_PATH=../fabric-network/crypto-config
FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_PEER_HOST_ALIAS=peer0.lawenforcement.evidentia.network

# TLS Configuration
FABRIC_TLS_CERT_PATH=peerOrganizations/lawenforcement.evidentia.network/peers/peer0.lawenforcement.evidentia.network/tls/ca.crt

# User Identity Configuration
FABRIC_USER_CERT_PATH=peerOrganizations/lawenforcement.evidentia.network/users/Admin@lawenforcement.evidentia.network/msp/signcerts/Admin@lawenforcement.evidentia.network-cert.pem
FABRIC_USER_KEY_DIR=peerOrganizations/lawenforcement.evidentia.network/users/Admin@lawenforcement.evidentia.network/msp/keystore

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Encryption Configuration
# AES-256-GCM key for evidence encryption (32 bytes in hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Logging
LOG_LEVEL=info

